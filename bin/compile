#!/bin/sh
echo "################################################"
echo "Running Hejmos build pack - compile script start"
echo "################################################"

echo "Deleting modules not needed run-time. This to reduce slug size."
rm -rf modules/calculations
rm -rf modules/common
rm -rf modules/config
rm -rf modules/data
rm -rf modules/data-objects
rm -rf modules/file-storage
rm -rf modules/test-utils
echo "Done deleting modules"

echo "Build dir"
BUILD_DIR=$1
echo $1
echo $BUILD_DIR


echo "Dirs in dir modules:"
ls modules/

echo "ls"
ls

echo "pwd"
pwd

echo ".. ls"
cd ..
ls 

echo ".. ls"
cd ..
ls 


echo "################################################"
echo "Running Hejmos build pack - compile script end"
echo "################################################"
