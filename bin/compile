#!/bin/sh
echo "################################################"
echo "Running Hejmos build pack - compile script start"
echo "################################################"

echo "Build dir"
BUILD_DIR=$1
echo $BUILD_DIR
ls $BUILD_DIR

echo "ls clac"
ls $BUILD_DIR/modules/calculations

echo "ls modules"
ls $BUILD_DIR/modules

''
echo "Deleting modules not needed run-time. This to reduce slug size."
rm -rf "$BUILD_DIR/modules/calculations"
rm -rf "$BUILD_DIR/modules/modules/common"
rm -rf "$BUILD_DIR/modules/modules/config"
rm -rf "$BUILD_DIR/modules/modules/data"
rm -rf "$BUILD_DIR/modules/modules/data-objects"
rm -rf "$BUILD_DIR/modules/modules/file-storage"
rm -rf "$BUILD_DIR/modules/modules/test-utils"
echo "Done deleting modules"


echo "ls modules"
ls $BUILD_DIR/modules


echo "################################################"
echo "Running Hejmos build pack - compile script end"
echo "################################################"
